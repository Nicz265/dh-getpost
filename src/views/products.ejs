Â«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		<% productos.forEach(function (unProducto) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= unProducto.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= unProducto.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<% let resultado = unProducto.price - (unProducto.price*unProducto.discount/100).toFixed(0) %> 
								<%= toThousand(resultado) %>
							</h2>
							<span><%= unProducto.discount %>% OFF</span>
							<p><%= unProducto.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>